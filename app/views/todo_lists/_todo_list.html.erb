<div id="<%= dom_id todo_list %>">
  <h1><%= todo_list.name %></h1>
  <p>Mark the completed tasks</p>
  <ul>
    <% todo_list.todo_items.each do |todo_item| %>
      <li><%= render 'todo_items/todo_item', todo_item: todo_item %></li>
    <% end %>
  </ul>
  <%= link_to 'New Todo Item', new_todo_list_todo_item_path(todo_list) %>
</div>
